#!/usr/bin/env zsh
# Remove duplicate entries from PATH
# Source: https://github.com/mislav/dotfiles/blob/ea86d75e11e518ffe861f6d821b54e11804dfc17/bin/consolidate-path

typeset -a paths result
paths=($path)

while [[ ${#paths} -gt 0 ]]; do
  p="${paths[1]}"
  shift paths
  [[ -z ${paths[(r)$p]} ]] && result+="$p"
done

echo ${(j+:+)result}